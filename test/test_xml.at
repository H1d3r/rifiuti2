dnl Test suite for rifiuti2

AT_SETUP([INFO2: XML validation])
AT_KEYWORDS([info2 xml])
AT_SKIP_IF([! $has_xmllint])
AT_CHECK([
	$progf -x $sample/INFO2-sample1 | \
	$xmllint --noout -
])
AT_CLEANUP

AT_SETUP([INFO2: DTD validation])
AT_KEYWORDS([info2 xml])
AT_SKIP_IF([! $has_xmllint])
AT_CHECK([
	$progf -x $sample/INFO2-sample1 | \
	$xmllint --noout --dtdvalid $srcdir/rifiuti.dtd -
])
AT_CLEANUP

